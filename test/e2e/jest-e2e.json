{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/../../src/$1"
  },
  "testTimeout": 20000,
  "setupFilesAfterEnv": [
    "<rootDir>/../helpers/jest.setup.ts"
  ]
}
